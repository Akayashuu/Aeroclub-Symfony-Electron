{% extends 'layout/gestion_header.html.twig' %}
{% block body %}
    {% block content %}
    {{ encore_entry_script_tags('bulmaCalendar') }}
    {{ encore_entry_link_tags('BulmaCalendarCss') }}
    <style>
        input::placeholder {
            color: gray !important;
        }
    </style>
       <div class="container">
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
                <div class="columns is-multiline">
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Nom</label>
                            <div class="control">
                                {{ form_widget(form.nom, {'attr': {'class': 'input', 'placeholder': 'Nom'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Prenom</label>
                            <div class="control">
                                {{ form_widget(form.prenom, {'attr': {'class': 'input', 'placeholder': 'Prénom'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="field">
                            <label class="label">adresse</label>
                            <div class="control">
                                {{ form_widget(form.adresse, {'attr': {'class': 'input', 'placeholder': 'Adresse'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Code Postal</label>
                            <div class="control">
                                {{ form_widget(form.codePostal, {'attr': {'class': 'input', 'placeholder': 'Code Postal'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Ville</label>
                            <div class="control">
                                {{ form_widget(form.ville, {'attr': {'class': 'input', 'placeholder': 'Ville'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Téléphone</label>
                            <div class="control">
                                {{ form_widget(form.tel, {'attr': {'class': 'input', 'placeholder': 'Téléphone'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Fax</label>
                            <div class="control">
                                {{ form_widget(form.fax, {'attr': {'class': 'input', 'placeholder': 'Fax'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Email</label>
                            <div class="control">
                                {{ form_widget(form.email, {'attr': {'class': 'input', 'placeholder': 'Email'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Numéro de Badge</label>
                            <div class="control">
                                {{ form_widget(form.numBadge, {'attr': {'class': 'input', 'placeholder': 'Numéro de Badge'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Numéro de Qualification</label>
                            <div class="control">
                                {{ form_widget(form.numQualif, {'attr': {'class': 'input', 'placeholder': 'Numéro de Qualification'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Profession</label>
                            <div class="control">
                                {{ form_widget(form.profession, {'attr': {'class': 'input', 'placeholder': 'Profession'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Lieu de Naissance</label>
                            <div class="control">
                                {{ form_widget(form.lieuNaissance, {'attr': {'class': 'input', 'placeholder': 'Lieu de Naissance'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Carte Fédéral</label>
                            <div class="control">
                                {{ form_widget(form.carteFederal, {'attr': {'class': 'input', 'placeholder': 'Carte Fédéral'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Date de Naissance</label>
                            <div class="control">
                                {{ form_widget(form.dateNaissance, {'attr': {'type': 'date', 'placeholder': 'Date de Naissance'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Date d'Attestation</label>
                            <div class="control">
                                {{ form_widget(form.dateAttestation, {'attr': {'type': 'date', 'placeholder': 'Date d\'attestation'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
