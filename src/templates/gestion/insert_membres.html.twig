                                {{ form_widget(form.dateTheoriquePPLA, {'attr': {'type': 'date', 'placeholder': 'Date Théorique du PPLA'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Date du BB</label>
                            <div class="control">
                                {{ form_widget(form.dateBB, {'attr': {'type': 'date', 'placeholder': 'Date du BB'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Date du PPLA</label>
                            <div class="control">
                                {{ form_widget(form.datePPLA, {'attr': {'type': 'date', 'placeholder': 'Date du PPLA'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Numéro du BB</label>
                            <div class="control">
                                {{ form_widget(form.numeroBB, {'attr': {'class': 'input', 'placeholder': 'Numéro du BB'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Numéro du PPLA</label>
                            <div class="control">
                                {{ form_widget(form.numeroPPLA, {'attr': {'class': 'input', 'placeholder': 'Numéro du PPLA'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Date D'inscription</label>
                            <div class="control">
                                {{ form_widget(form.dateInscription, {'attr': {'type': 'date', 'placeholder': 'Date Inscription'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Password</label>
                            <div class="control">
                                {{ form_widget(form.password, {'attr': {'class': 'input', 'placeholder': 'Mot de passe'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            {{ form_widget(form.save, {'attr':{'class':'button is-success'}, 'label': '<span class="icon is-small"><i class="fas fa-plus"></i></span><span>Ajouter</span>', 'label_html':true  }) }}
            {{ form_end(form) }}
        </div>
    {% endblock %}
{% endblock %}