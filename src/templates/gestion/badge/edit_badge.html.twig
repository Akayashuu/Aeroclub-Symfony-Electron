{% extends 'layout/gestion_header.html.twig' %}

{% block body %}
    {% block content %}
        <style>
            /* Style des placeholders des inputs */
            ::placeholder {
                color: gray !important;
            }

            /* Style du bouton */
            .button.is-success {
                background-color: #23d160;
                color: white;
                font-size: 1rem;
                font-weight: bold;
                border-radius: 20px;
            }

            .button.is-success:hover {
                background-color: #1e8c4e;
            }


            .column.is-half {
                max-width: 50%;
            }

            .label {
                font-size: 1.2rem;
                font-weight: bold;
            }

            .input {
                border-radius: 20px;
                box-shadow: none;
                padding-left: 1rem;
                font-size: 1.2rem;
                border: none;
                border-bottom: solid 2px lightgray;
                width: 100%;
            }

            .input:focus {
                box-shadow: none;
                border: none;
                border-bottom: solid 2px #23d160;
            }

            /* Style des messages d'erreur */
            .help.is-danger {
                color: #ff3860;
                font-weight: bold;
                font-size: 1rem;
                margin-top: 0.5rem;
            }
        </style>
       <div class="container">
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
                <div class="columns is-multiline">
                    <div class="column is-half">
                        <div class="field">
                            <label class="label">Badge</label>
                            <div class="control">
                                {{ form_widget(form.badge, {'attr': {'class': 'input', 'placeholder': 'Badge'}}) }}
                                {{ form_errors(form.badge, {'attr': {'class': 'help is-danger'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        {{ form_widget(form.save, {'attr':{'class':'button is-success'}, 'label': '<span class="icon is-small"><i class="fas fa-pen"></i></span><span>Modifier</span>', 'label_html':true  }) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    {% endblock %}
{% endblock %}